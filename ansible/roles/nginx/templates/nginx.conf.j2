events {
	worker_connections 1024;
}

http {
	server {
		listen {{ nginx_listen_port }};
		server_name {{ nginx_server_name }};
		
		location = /grafana {
			proxy_set_header Host $http_host;
	    	proxy_pass http://localhost:3000/;
		}
			
		location /grafana/ {
			proxy_set_header Host $http_host;
	    	proxy_pass http://localhost:3000/;
		}


	}
}
